{
	"ActionBar":
	{
		"Items":
		[{
			"Position": "right",
			"SystemItem": "/SAPAssetManager/Rules/Common/Platform/DoneIcon.js",
            "Text": "/SAPAssetManager/Rules/Common/Platform/DoneText.js",
			"OnPress": "/SAPAssetManager/Actions/Notifications/Item/NotificationItemActivityCreateUpdateRequired.action"
		},
		{
			"Position": "left",
			"SystemItem": "Cancel",
			"OnPress": "/SAPAssetManager/Actions/Page/CancelPage.action"
		}]
	},
	"OnLoaded" : "/SAPAssetManager/Rules/Notifications/Item/Activity/CreateUpdate/NotificationItemActivityCreateUpdateOnPageLoad.js",
	"Controls": [{
		"Sections":
		[{
			"Controls":
			[{
				"PlaceHolder": "$(L,activity_description)",
				"Value": "{ActivityText}",
				"_Name": "DescriptionTitle",
				"_Type": "Control.Type.FormCell.Note"
			}]
		},
		{
			
			"Controls":
			[{
				"AllowMultipleSelection": false,
				"Search": { 
                   	"Enabled": true,
   	               	"Delay": 500,
					"MinimumCharacterThreshold": 3,
					"Placeholder": "$(L,search)",
					"BarcodeScanner": true			   
                },
				"Caption": "$(L,group)",
				"Value": "{ActivityCodeGroup}",
				"PickerItems":
				{
					"DisplayValue" : "{{#Property:CodeGroup}} - {{#Property:Description}}",
					"ReturnValue": "{CodeGroup}",
					"Target":
					{
						"EntitySet" : "PMCatalogProfiles",
						"Service" : "/SAPAssetManager/Services/AssetManager.service",
						"QueryOptions" : "/SAPAssetManager/Rules/Notifications/Item/Activity/Details/NotificationItemActivityGroupQuery.js"
					}
				},
				"OnValueChange" : "/SAPAssetManager/Rules/Notifications/Item/Activity/CreateUpdate/NotificationItemActivityCreateUpdateCode.js",
				"_Name": "GroupLstPkr",
				"_Type": "Control.Type.FormCell.ListPicker"
			},
			{
				"AllowMultipleSelection": false,
				"Search": { 
                   	"Enabled": true,
   	               	"Delay": 500,
					"MinimumCharacterThreshold": 3,
					"Placeholder": "$(L,search)",
					"BarcodeScanner": true
                },
				"Caption": "$(L,code)",
				"IsEditable" : false,
				"Value": "{ActivityCode}",
				"PickerItems":
				{
					"DisplayValue" : "{{#Property:Code}} - {{#Property:CodeDescription}}",
					"ReturnValue": "{Code}",
					"Target":
					{
						"EntitySet" : "PMCatalogCodes",
						"Service" : "/SAPAssetManager/Services/AssetManager.service",
						"QueryOptions" : "/SAPAssetManager/Rules/Notifications/Activity/NotificationActivityCodeQuery.js"
					}
				},
				"_Name": "CodeLstPkr",
				"_Type": "Control.Type.FormCell.ListPicker"
            }]
        },
        {
            "Controls":
            [{
                "PlaceHolder": "$(L,note)",
                "_Name": "LongTextNote",
                "Value": "",
                "_Type": "Control.Type.FormCell.Note",
				"IsVisible": "/SAPAssetManager/Rules/Common/IsOnCreate.js",
				"IsAutoResizing": true,
                "IsEditable": true
            }]
		},
		{
			"Controls":
			[{
				"Title": "$(L,discard)",
				"OnPress": "/SAPAssetManager/Rules/Common/DiscardAction.js",
				"IsVisible": "/SAPAssetManager/Rules/Common/IsDiscardButtonVisible.js",
				"_Type": "Control.Type.FormCell.Button",
				"_Name": "DiscardButton"
			}]
		}],
		"_Name": "FormCellContainer",
		"_Type": "Control.Type.FormCellContainer"
	}],
	"_Type": "Page",
	"_Name": "NotificationActivityAddPage"
}